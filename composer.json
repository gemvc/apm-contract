{
  "name": "gemvc/apm-contracts",
  "description": "APM contracts, interface and abstract base class for GEMVC framework",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "gemvc",
    "apm",
    "tracing",
    "monitoring",
    "contracts",
    "interfaces"
  ],
  "authors": [
    {
      "name": "Ali Khorsandfard",
      "homepage": "https://www.gemvc.de"
    }
  ],
  "homepage": "https://github.com/gemvc/apm-contracts",
  "support": {
    "issues": "https://github.com/gemvc/apm-contracts/issues",
    "source": "https://github.com/gemvc/apm-contracts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gemvc/apm-contracts.git"
  },
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^10.1"
  },
  "autoload": {
    "psr-4": {
      "Gemvc\\Core\\Apm\\": "src/Gemvc/Core/Apm/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Gemvc\\Core\\Apm\\Tests\\": "tests/",
      "Gemvc\\Http\\": "stubs/Gemvc/Http/",
      "Gemvc\\Helper\\": "stubs/Gemvc/Helper/"
    }
  },
  "archive": {
    "exclude": [
      "/tests",
      "/TESTING_PROTOCOL.md",
      "/RELEASE_NOTES.md",
      "/.github",
      "/.phpunit.cache",
      "/.phpunit.result.cache",
      "/phpunit.xml",
      "/phpstan.neon",
      "/phpstan-tests.neon",
      "/coverage-report"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=Unit",
    "test:integration": "phpunit --testsuite=Integration",
    "test:protocol": "phpunit --testsuite=Protocol",
    "test:coverage": "phpunit --coverage-html coverage-report",
    "phpstan": "phpstan analyse",
    "phpstan:tests": "phpstan analyse -c phpstan-tests.neon",
    "phpstan:all": "phpstan analyse && phpstan analyse -c phpstan-tests.neon",
    "phpstan:baseline": "phpstan analyse --generate-baseline"
  }
}
